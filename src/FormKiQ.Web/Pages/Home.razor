@page "/"
@inject ApiClient ApiClient

<PageTitle>Home</PageTitle>

@if (_documents == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>URL</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var document in _documents)
        {
            <tr>
                <td>@document.DocumentId</td>
                <td>@document.ThumbnailUrl</td>
                <td><img src="@document.ThumbnailUrl" alt="@document.DocumentId"></td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<Document>? _documents;

    protected override async Task OnInitializedAsync()
    {
        _documents = await ApiClient.GetDocuments();
    }
}
